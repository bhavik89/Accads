<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bhavik.socketclient.MainActivity" >

    <EditText
        android:id="@+id/ip_addr"
        android:layout_width="170sp"        
        android:layout_height="40sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16sp"
        android:ems="10"
        android:hint="IP Address"         
    />
    
    <EditText
        android:id="@+id/port_addr"
        android:layout_width="100sp"        
        android:layout_height="40sp"
        android:layout_alignBaseline="@+id/ip_addr"
        android:layout_alignBottom="@+id/ip_addr"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/ip_addr"
        android:ems="10"
        android:hint="Port"
        android:inputType="number"         
    />
    
    <EditText
        android:id="@+id/message"
        android:layout_width="300sp"        
        android:layout_height="200sp"
        android:layout_below="@+id/ip_addr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Message"       
    />

    <Button
        android:id="@+id/send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Send Message" />

</RelativeLayout>