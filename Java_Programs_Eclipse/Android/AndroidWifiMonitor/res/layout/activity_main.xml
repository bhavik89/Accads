<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bhavik.androidwifimonitor.MainActivity" >


<TextView  
    android:id="@+id/Connected"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="My Wifi IP:"
    />
<TextView  
    android:id="@+id/Ip"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="SSID:"
    />
<TextView  
    android:id="@+id/Ssid"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="BSSID:"
    />
<TextView  
    android:id="@+id/Bssid"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Speed:"
    />
<TextView  
    android:id="@+id/Speed"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Rssi:"
    />
<TextView  
    android:id="@+id/Rssi"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="MAC:"
    />
<TextView  
    android:id="@+id/Mac"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Bytes Received:"
    />
<TextView  
    android:id="@+id/rxBytes"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Bytes Transmited:"
    />
<TextView  
    android:id="@+id/txBytes"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"   
    />

<Button
    android:id="@+id/getAps"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:text="Get APs >>" 
    android:onClick="getAccessPointsList"
    />

</LinearLayout>
